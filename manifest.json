{
    "manifest_version": 3,
    "name": "LeetCode Focus",
    "version": "1.0",
    "description": "Removes all distractions from LeetCode to help you stay focused.",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://leetcode.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ],
    "icons": {
      "16": "images/icon_16.png",
      "64": "images/icon_64.png",
      "128": "images/icon_128.png",
      "512": "images/icon_512.png"
    }
  }
  