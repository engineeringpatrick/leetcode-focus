{
    "manifest_version": 3,
    "name": "LeetCode Focus",
    "version": "1.0",
    "description": "Removes all distractions from LeetCode to help you stay focused.",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://leetcode.com/*"],
        "js": ["content.js"],
        "run_at": "document_start"
      }
    ]
  }
  